{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-native", "jsx-a11y", "import", "jest"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": "off",
    "comma-dangle": "off",
    "react/forbid-prop-types": "off"
  }
}
